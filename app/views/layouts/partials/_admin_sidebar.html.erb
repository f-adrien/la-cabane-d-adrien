<div class="sidebar">
  <div class='admin-sidebar-logo'>
    <%= image_tag "https://res.cloudinary.com/francois-adrien/image/upload/v1639668869/Logo_CA_Couleurs_CMJN_copie_2_fj8x50.jpg" %>
  </div>
  <nav class='admin-nav w-100'>
    <div class="sidebar__links">
      <%= link_to root_path do %>
        <div class="sidebar__link main_link align-items-center <%= 'active-tab' if dashboard_tab_active %>">
          <%= svg 'icon_dashboard' %>
          <p class="ml-2">Dashboard</p>
        </div>
      <% end %>
      <%= link_to products_path, class: '' do %>
        <div class="sidebar__link main_link align-items-center <%= 'active-tab' if products_tab_active %>">
          <%= svg 'icon_box_open' %>
          <p class="ml-2">Produits</p>
        </div>
      <% end %>
      <%= link_to options_path, class: '' do %>
        <div class="sidebar__link main_link align-items-center <%= 'active-tab' if options_tab_active %>">
          <%= svg 'icon_list' %>
          <p class="ml-2">Attributs</p>
        </div>
      <% end %>
    </div>
  </nav>
</div>
